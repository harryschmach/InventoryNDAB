<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main"
    >

    <TextView
        android:id="@+id/sql_command_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last SQL Command Will Appear Here"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sql_table_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sql_table_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reading of SQL Table will be here"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sql_command_tv" />

</android.support.constraint.ConstraintLayout>